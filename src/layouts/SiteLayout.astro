---
import BaseHead from '../components/BaseHead.astro';
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{title}</title>
  </head>
  <body>
    <BaseHead />
    <h1>{title}</h1>
    <article>
      <slot /> <!-- 你的内容会被插入到这里 -->
    </article>
  </body>
  <style>
    h1 {
      font-size: 2rem;
    }
  </style>
</html>