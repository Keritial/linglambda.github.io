---
import { getCollection, render } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import TitleCard from "../components/TitileCard.astro";
import { getCount } from "../utils/utils.ts";
const allBlogPosts = await getCollection("blog");
---

<BaseLayout>
  {
    allBlogPosts.map(async (blog) => {
      const { title: t, date: d } = blog.data;
      const b = blog.body;
      const w = getCount(b?b:"");
      const { Content } = await render(blog);
      return (
        <TitleCard title={t} wordNum={w} date={d}>
          {b}
        </TitleCard>
      );
    })
  }
</BaseLayout>

<style>
  * {
    box-sizing: border-box; /* 确保所有元素的宽高包含 padding 和 border */
  }

  html body {
    margin: 0;
    padding: 0;
    height: 100%; /* 确保body和html占满全屏 */
    margin: 0;
    padding: 0;
  }
</style>
